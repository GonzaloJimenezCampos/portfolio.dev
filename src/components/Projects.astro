---
import GithubIcon from "./icons/GithubIcon.astro";
import LinkButton from "./LinkButton.astro";
import HTMLIcon from "./icons/HTMLIcon.astro";
import CSSIcon from "./icons/CSSIcon.astro";
import JavaScriptIcon from "./icons/JavaScripticon.astro";
import PHPIcon from "./icons/PHPicon.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "border text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "border text-white",
    icon: CSSIcon,
  },
  JavaScript: {
    name: "JavaScript",
    class: "border text-white",
    icon: JavaScriptIcon,
  },
  PHP: {
    name: "PHP",
    class: "border text-white",
    icon: PHPIcon,
  },
};
const PROJECTS = [
  {
    title: "FxLoL",
    description:
      "Primer proyecto poniendo a prueba mis conocimientos adquiridos, página web destinada al análisis de partidas de jugadores de League of Legends. Sus puntos fuerte es la robusta lógica que posee detrás para tratar todos los datos del jugador. También dispone de un foro con herramientas de moderación y gestión de cuentas.",
    github: "https://github.com/GonzaloJimenezCampos/TFG_Jimenez_Campos_Gonzalo",
    image: "/projects/FxLoL.webp",
    tags: [
      TAGS.JavaScript,
      TAGS.HTML,
      TAGS.CSS,
      TAGS.PHP,
    ],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform overflow-clip rounded-xl sm:rounded-xl">
            <img
              alt="FxLoL Screenshot"
              class="object-cover object-top w-full h-auto transition duration-500 sm:h-full md:scale-110 hover:scale-105"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-white-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2 flex-wrap">
              {tags.map((tag) => (
                <li class="pb-2">
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-white-700 opacity-85 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-center justify-center w-full md:justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GithubIcon class="size-6" />
                  Código
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
